<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.registrasi.SyaratPendaftaranDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_syarat_pendaftaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/persyaratan_untuk_pendaftaran"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Card for Syarat Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/stepBackgroundColor"
                android:padding="16dp">

                <!-- Persyaratan Umum -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persyaratan Umum"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Warga Negara Indonesia"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Lulusan SMA/MA/SMK atau yang sederajat paling lama 3 (tiga) tahun terakhir"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Memiliki kesehatan yang memadai sehingga tidak mengganggu kelancaran proses studi"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Mendaftarkan diri sebagai peserta Seleksi Mandiri UNS tahun 2024"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Mengikuti dan memiliki Nilai UTUL UNS 2024"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="16dp"/>

                <!-- Persyaratan Khusus -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persyaratan Khusus"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Peserta yang memilih S-1 Pendidikan Jasmani, Kesehatan dan Rekreasi dan S-1 Pendidikan Kepelatihan Olahraga memiliki tinggi badan minimal 160 cm bagi putra dan minimal 155 cm bagi putri dan mengunggah portofolio"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Peserta yang memilih S-1 Kriya Seni/Tekstil, S-1 Seni Rupa Murni (Seni Lukis, Grafis, Patung, Keramik), S-1 Desain Interior, S-1 Desain Komunikasi Visual, S-1 Pendidikan Seni Rupa diharuskan mengunggah portofolio"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Peserta yang memilih program studi Kebidanan: putri, memiliki tinggi badan minimal 150 cm."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>