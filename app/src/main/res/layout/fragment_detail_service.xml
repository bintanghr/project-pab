<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layanan.DetailServiceFragment">

    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/service_name" />

    <TextView
        android:id="@+id/syarat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_service_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/syarat" />

    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/syarat"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/service_terms"/>

    <TextView
        android:id="@+id/prosedur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_terms"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="@string/prosedur" />

    <TextView
        android:id="@+id/tv_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prosedur"
        android:text="@string/service_procedure"/>

    <TextView
        android:id="@+id/biaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_procedure"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/biaya" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/biaya"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/service_cost"/>

    <TextView
        android:id="@+id/waktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cost"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="@string/waktu_pengerjaan" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/waktu"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/service_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>