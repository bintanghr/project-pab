<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.registrasi.SyaratPendaftaranDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/syarat_pendaftaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/persyaratan_untuk_pendaftaran"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Card for Syarat Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/stepBackgroundColor"
                android:padding="16dp">

                <!-- Persyaratan Umum -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/persyaratan_umum"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_warga_negara_indonesia"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_lulusan_sma_ma_smk_atau_yang_sederajat_paling_lama_3_tiga_tahun_terakhir"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_memiliki_kesehatan_yang_memadai_sehingga_tidak_mengganggu_kelancaran_proses_studi"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_4_mendaftarkan_diri_sebagai_peserta_seleksi_mandiri_uns_tahun_2024"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_5_mengikuti_dan_memiliki_nilai_utul_uns_2024"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingBottom="16dp"
                    tools:ignore="RtlSymmetry" />

                <!-- Persyaratan Khusus -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/persyaratan_khusus"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_peserta_yang_memilih_s_1_pendidikan_jasmani_kesehatan_dan_rekreasi_dan_s_1_pendidikan_kepelatihan_olahraga_memiliki_tinggi_badan_minimal_160_cm_bagi_putra_dan_minimal_155_cm_bagi_putri_dan_mengunggah_portofolio"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="MissingPrefix,RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_peserta_yang_memilih_s_1_kriya_seni_tekstil_s_1_seni_rupa_murni_seni_lukis_grafis_patung_keramik_s_1_desain_interior_s_1_desain_komunikasi_visual_s_1_pendidikan_seni_rupa_diharuskan_mengunggah_portofolio"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_peserta_yang_memilih_program_studi_kebidanan_putri_memiliki_tinggi_badan_minimal_150_cm"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingBottom="16dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>