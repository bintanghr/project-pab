<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.registrasi.DashboardRegistrasiFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pendaftaran_dan_registrasi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Card for Waktu Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWaktuPendaftaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="18dp"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            android:focusable="true"
            android:backgroundTint="@color/stepBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_calender"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/waktu_pendaftaran"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_pendaftaran"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    android:contentDescription="@string/arrowdetail" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Syarat Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSyaratPendaftaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="18dp"
            app:cardCornerRadius="16dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/stepBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/documents"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/syarat_pendaftaran"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/syarat_pendaftaran"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    android:contentDescription="@string/arrowdetail" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Cara Pendaftaran -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCaraPendaftaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="18dp"
            app:cardCornerRadius="16dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/stepBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/register"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/cara_pendaftaran"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cara_pendaftaran"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    android:contentDescription="@string/arrowdetail" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>