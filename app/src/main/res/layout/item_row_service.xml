<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_row_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="12dp"
    card_view:cardCornerRadius="16dp"
    android:backgroundTint="#F8F8FF">
    <!--    #F8F8FF-->
    <!--    #F5F5F5-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

<!--        <ImageView-->
<!--            android:id="@+id/img_faculty_photo"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:contentDescription="@string/foto_fakultas"-->
<!--            card_view:layout_constraintBottom_toBottomOf="parent"-->
<!--            card_view:layout_constraintStart_toStartOf="parent"-->
<!--            card_view:layout_constraintTop_toTopOf="parent"-->
<!--            tools:src="@tools:sample/avatars" />-->
<!--        android:layout_toEndOf="@id/img_faculty_photo"-->

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:fontFamily="@font/poppins_semi_bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="lorem ipsum" />

        <TextView
            android:id="@+id/tv_processing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#555555"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            card_view:layout_constraintStart_toStartOf="@+id/tv_service_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_service_name"
            tools:text="lorem ipsum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tv_processing_time"
            card_view:layout_constraintBottom_toBottomOf="@id/tv_processing_time"
            android:textColor="#555555"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/lihat_detail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>